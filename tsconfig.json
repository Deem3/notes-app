{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
    //   "@utils/components": ["src/utils/components/index.ts"],
    //   "@utils/hooks": ["src/utils/hooks/index.ts"],
    //   "@utils/translations": ["src/utils/translations/index.ts"],
    "translations": ["src/utils/translations/index.ts"],
    "components": ["src/utils/components/index.ts"],
    "hooks": ["src/utils/hooks/index.ts"],
    "state": ["src/utils/state/index.ts"],
    "model": ["src/utils/model/index.ts"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
